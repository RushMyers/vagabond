
<div class="container">



  <div class="row">

    <div class="col-lg-12">
      <h1 class="page-header text-center">CITIES</h1>
    </div>
          <% @cities.each do |city| %>

          <div class="col-lg-3 col-md-4 col-xs-6 thumb">
            <a href="#">
              <img class="img-responsive" <%= image_tag city.image_url %><p class="text-center"><%= link_to "#{city.name}", city_path(id:city.id) %></p>
            </a>
          </div>
        <% end %>
  </div>

</div>
