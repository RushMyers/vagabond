<div class="container">
  <h4 class="center">Cities Show Page</h4>

  <img class="img-responsive" <%=  image_tag @city.image_url %>
  <br>
  <%= link_to "Add Post", new_city_post_path(@city), class: "waves-effect waves-light btn"  %>

  <h1><%=@city.name %></h1>
  <% @ordered_posts.each do |post| %>
  <h3><%= link_to post.title, city_post_path(@city, post)%></h3>
  <p><%=h truncate(post.content, :length => 1000) %></p>

  <div class="right">
  <i>created at:</i>
  <i><%= post.created_at.to_formatted_s(:short) %></i>
  <br>
  <i>last updated:</i>
  <i><%= post.updated_at.to_formatted_s(:short) %></i>
  </div>


  <p><%= link_to "see more", city_post_path(@city, post)%></p>
  <%= link_to 'Delete', city_post_path(@city, post), method: :delete, data: {confirm: "Are you sure?"}%>

  <% end %>

</div>
